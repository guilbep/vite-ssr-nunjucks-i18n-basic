{% extends "main.njk" %}

{% block content %}
<h1>{{ t("about.title") }}</h1>
<p>{{ t("about.description") }}</p>
<p><em>Cette page est spécialement conçue pour les visiteurs français!</em></p>

<nav>
  {% for loc in alternates %}
    <a href="{{ getLocalizedUrl('/about.html', loc) }}" 
       {% if locale == loc %}class="active"{% endif %}>
      {{ loc | upper }}
    </a>
  {% endfor %}
</nav>
{% endblock %}

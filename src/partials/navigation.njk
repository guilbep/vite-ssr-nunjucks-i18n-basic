{# Locale switcher that maintains the current page #}
<div class="locale-switcher">
  {% for switchLocale in locales %}
    {% if page.routes[switchLocale] %}
      <a href="{{ page.routes[switchLocale] }}" 
         {% if switchLocale == locale %}class="active"{% endif %}
         hreflang="{{ switchLocale }}">
        {{ switchLocale.upper() }}
      </a>
    {% endif %}
  {% endfor %}
</div>
